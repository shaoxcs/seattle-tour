<%- include("../partials/header") %>

<div class="row justify-content-center">
  <div class="col-md-12 text-center">
    <h1>Edit <%= campground.name %></h1>
  </div>

  <div class="col-xs-10 col-sm-8 col-md-6 col-lg-4">
    <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">

      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]" id="name">
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        <input class="form-control" type="number" value="<%= campground.price %>" name="campground[price]" id="price" min="0.00" step="0.01">
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]" id="image">
      </div>

      <div class="form-group">
        <label for="image">Desctription</label>
        <input class="form-control" type="text" value="<%= campground.description %>" name="campground[description]" id="description">
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Submit!</button>
      </div>

    </form>
    <a href="/campgrounds">Back</a>
  </div>

</div>

<%- include("../partials/footer") %>
