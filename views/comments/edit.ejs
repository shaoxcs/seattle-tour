<%- include("../partials/header") %>

<div class="row justify-content-center">
  <div class="col-md-12 text-center">
   <h1>Edit Comment</h1>
  </div>

  <div class="col-xs-10 col-sm-8 col-md-6 col-lg-4">
    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="comment[text]">Text</label>
        <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]" id="text">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Submit!</button>
      </div>

    </form>
    <a href="/campgrounds">Back</a>
  </div>

</div>
<%- include("../partials/footer") %>
